#.SUFFIXES: .sho $(SUFFIXES)
#
# Do not use default suffixes rule
#
.SUFFIXES:

all : rexx$(EXE) $(STATICLIB) execiser$(EXE) $(SHL_TARGETS) rxstack$(EXE) rxqueue$(EXE)

$(srcdir)/rexx.h : $(srcdir)/extern.h $(srcdir)/strings.h $(srcdir)/defs.h $(srcdir)/types.h $(srcdir)/mt.h

$(srcdir)/mt.h : $(srcdir)/$(MT_FILE).h

rexx$(EXE) : $(OFILES) rexx.$(OBJ) nosaa.$(OBJ)
	$(PURIFY) $(CC) $(LINKOPT) $(STATIC_LDFLAGS) -o rexx $(OBJECTS) rexx.$(OBJ) nosaa.$(OBJ) $(BOTHLIBS)
	$(LDEXTRA)

regina$(EXE) : $(EXECISER_DEP) regina.$(OBJ) $(GETOPT)
	$(PURIFY) $(CC) $(LINKOPT) $(DYNAMIC_LDFLAGS) -o regina$(EXE) regina.$(OBJ) $(GETOPT) $(LINKSHL) $(BOTHLIBS) $(SHLIBS)
	$(LDEXTRA)

execiser$(EXE) : execiser.$(OBJ) $(EXECISER_DEP)
	$(PURIFY) $(CC) $(LINKOPT) -o execiser execiser.$(OBJ) $(LIBLINK) $(BOTHLIBS) $(SHLIBS)
	$(LDEXTRA)

threader$(EXE) : threader.$(OBJ) $(EXECISER_DEP)
	$(PURIFY) $(CC) $(LINKOPT) -o threader threader.$(OBJ) $(LIBLINK) $(BOTHLIBS) $(SHLIBS)
	$(LDEXTRA)

rxstack$(EXE) : rxstack.$(OBJ) erexxbif.$(OBJ) eextstack.$(OBJ)
	$(PURIFY) $(CC) $(LINKOPT) $(DYNAMIC_LDFLAGS) -o rxstack$(EXE) rxstack.$(OBJ) erexxbif.$(OBJ) eextstack.$(OBJ) $(GETOPT) $(BOTHLIBS) $(SHLIBS)
	$(LDEXTRA)

rxqueue$(EXE) : rxqueue.$(OBJ) erexxbif.$(OBJ) eextstack.$(OBJ)
	$(PURIFY) $(CC) $(LINKOPT) $(DYNAMIC_LDFLAGS) -o rxqueue$(EXE) rxqueue.$(OBJ) erexxbif.$(OBJ) eextstack.$(OBJ) $(GETOPT) $(BOTHLIBS) $(SHLIBS)
	$(LDEXTRA)

$(LIBPRE)$(LIBFILE)$(LIBPST): $(OFILES) client.$(OBJ) drexx.$(OBJ) rexxsaa.$(OBJ)
	$(LIBEXE) $(LIBFLAGS) $(OBJECTS) client.$(OBJ) drexx.$(OBJ) rexxsaa.$(OBJ)
	$(RANLIB_LIB)

$(SHLPRE)$(SHLFILE)$(SHLPST): $(SHOFILES) $(REGINAEXP)
	$(SHL_LD)

$(SHLPRE)$(SHLFILE)$(SHLPST).$(ABI): $(SHOFILES) $(REGINAEXP)
	$(SHL_LD)
	-rm -f $(SHLPRE)$(SHLFILE)$(SHLPST).$(ABI_MAJOR)
	-$(LN_S) $(SHLPRE)$(SHLFILE)$(SHLPST).$(ABI) $(SHLPRE)$(SHLFILE)$(SHLPST).$(ABI_MAJOR)
	-rm -f $(SHLPRE)$(SHLFILE)$(SHLPST)
	-$(LN_S) $(SHLPRE)$(SHLFILE)$(SHLPST).$(ABI) $(SHLPRE)$(SHLFILE)$(SHLPST)

