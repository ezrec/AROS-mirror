OBJS=   $(API_O) $(KERN_O) $(NETINET_O) $(NET_O)
SRCS= $(CSRCS) $(SYS_H) $(API_H) $(KERN_H) $(NET_H) $(NETINET_H)\
   $(PROTOS_H)
LIBSRC= -L lib -L netlib
LIBS= -lnet -lsana2 -lexec

all: amitcp

amitcp: $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) $(LIBSRC) $(LIBS) -o adetcp

#bsdsocket.doc: $(AUTODOCSRC)
