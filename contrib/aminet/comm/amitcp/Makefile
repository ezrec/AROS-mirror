net:  #$(NET_O)
	cd net; $(MAKE)
netinet:  #$(NETINET_O)
	cd netinet; $(MAKE)
kern: #$(KERN_O)
	cd kern; $(MAKE)
api:  #$(API_O)
	cd api; $(MAKE)
