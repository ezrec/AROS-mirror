DEBUG-OPTION = -g
VERBOSITY = --verbose -Wall
#Want to link it all up on this level
OBJECT-ONLY =

CFLAGS= $(OPTIMIZATION-OPTION) $(BASEREL-OPTION) $(DEBUG-OPTION)\
	 $(VERBOSITY) $(OBJECT-ONLY) 


