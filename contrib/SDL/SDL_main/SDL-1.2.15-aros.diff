+static int CGX_GetButton(int code)
+{
+	switch(code)
+	{
+		case IECODE_MBUTTON:
+			return SDL_BUTTON_MIDDLE;
+		case IECODE_RBUTTON:
+			return SDL_BUTTON_RIGHT;
+		default:
+			return SDL_BUTTON_LEFT;
+	}
+}
