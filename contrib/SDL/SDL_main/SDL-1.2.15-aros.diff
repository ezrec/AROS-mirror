+			*status = thread->status;
+		}
+		SDL_DelThread(thread);
+		SDL_free(thread);
+	}
+#if defined(PROTO_SDL_H)
+    AROS_LIBFUNC_EXIT
+#endif
+}
+
+#if !defined(PROTO_SDL_H)
