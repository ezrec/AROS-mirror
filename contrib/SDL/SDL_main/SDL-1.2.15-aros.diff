+/* Arguments and callback to setup and run the user thread function */
+typedef struct {
+	int (*func)(void *);
+	void *data;
+	SDL_Thread *info;
+	struct Task *wait;
+#if defined(PROTO_SDL_H)
+        struct SDLBase *base;
+#endif
