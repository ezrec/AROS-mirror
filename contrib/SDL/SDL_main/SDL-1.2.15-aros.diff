+void SDL_RunThread(void *data)
+{
+	thread_args *args;
+	int (*userfunc)(void *);
+	void *userdata;
+	int *statusloc;
+
+	/* Get the thread id */
+	args = (thread_args *)data;
+#if defined(PROTO_SDL_H)
+        struct SDLBase *SDLBase = args->base;
+#endif
