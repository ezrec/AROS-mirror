+												height,
+												GetBitMapAttr(SDL_Window->RPort->BitMap, BMA_DEPTH),
+												flags & SDL_FULLSCREEN ? BMF_CLEAR | BMF_MINPLANES : BMF_CLEAR |BMF_MINPLANES | BMF_DISPLAYABLE,
+												SDL_Window->RPort->BitMap);
+	}
+#endif
+	CGX_ResizeImage(this, screen, flags);
+
+	return 0;
