+LONG CopyStringBSTRToC (BSTR src, STRPTR dst, ULONG dst_size)
+{
+#ifdef __AROS__
+    STRPTR ptr = AROS_BSTR_ADDR(src);
+    ULONG ln = AROS_BSTR_strlen(src);
+#else
+    UBYTE *ptr = BADDR(src);
+    ULONG ln = *ptr++;
+#endif
+    if (ln > (dst_size-1)) ln = dst_size-1;
+    memcpy(dst, ptr, ln);
+    dst[ln] = 0;
+    return ln;
