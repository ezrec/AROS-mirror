+	int retval;
+
+	D(bug("[SDL] SDL_SemWaitTimeout()\n"));
+
+	if (!sem)
+	{
+		SDL_SetError("Passed a NULL semaphore");
+		return -1;
+	}
+
+	/* Try the easy cases first */
+	if (timeout == 0)
+	{
+		return SDL_SemTryWait(sem);
+	}
+	if (timeout == SDL_MUTEX_MAXWAIT)
+	{
+		return SDL_SemWait(sem);
+	}
