+	AROS_LHA(SDL_Thread *, thread, A0),
+	AROS_LHA(int *, status, A1),
+	struct SDLBase *, SDLBase, 143, SDL)
+{
+    AROS_LIBFUNC_INIT
+#endif
+	if ( thread ) {
+		SDL_SYS_WaitThread(thread);
