# Makefile for SDL test programs

include $(TOP)/config/make.cfg

FILES  := \
    checkkeys \
    graywin \
    loopwave \
    testalpha \
    testbitmap \
    testblitspeed \
    testcdrom \
    testcursor \
    testdyngl \
    testerror \
    testfile \
    testgamma \
    testgl \
    testiconv \
    testjoystick \
    testkeys \
    testloadso \
    testlock \
    testoverlay2 \
    testoverlay \
    testpalette \
    testplatform \
    testsprite \
    testtimer \
    testver \
    testvidinfo \
    testwin \
    testwm

# testhread
# testsem
# threadwin
# torturethread

EXEDIR := $(AROS_TESTS)/sdl

USER_INCLUDES := -I$(AROS_INCLUDES)/SDL

#MM test-sdl : includes linklibs linklibs-SDL

%build_progs mmake=test-sdl \
    files=$(FILES) targetdir=$(EXEDIR) \
    uselibs="SDL GL iconv arossupport amiga arosc m"


DATAFILES := icon.bmp picture.xbm sail.bmp sample.bmp sample.wav utf8.txt
DATAS  := $(foreach f,$(DATAFILES),$(EXEDIR)/$(f))

test-sdl : $(DATAS)

$(EXEDIR)/%.bmp : %.bmp
	@$(CP) $< $@

$(EXEDIR)/%.xbm : %.xbm
	@$(CP) $< $@

$(EXEDIR)/%.wav : %.wav
	@$(CP) $< $@

$(EXEDIR)/%.txt : %.txt
	@$(CP) $< $@

%common
