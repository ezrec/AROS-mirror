# Makefile for SDL test programs

include $(TOP)/config/make.cfg

FILES  := testalpha \
    	  testbitmap \
	  testcdrom \
	  testgamma \
	  testgl \
	  testjoystick \
	  testsprite \
	  testtimer \
	  testtypes \
	  testwin \
	  testwm \
	  loopwave 
#	  testerror \
#	  testhread \
#	  testkeys \
#	  testlock \
#	  testpalette \
#	  testsem \
#	  testver \
#	  testvidinfo \

EXEDIR := $(CONTRIBDIR)/sdl/test

USER_INCLUDES := -I$(AROS_INCLUDES)/SDL

#MM test-sdl : includes linklibs linklibs-SDL

%build_progs mmake=test-sdl \
    files=$(FILES) targetdir=$(EXEDIR) \
    uselibs="SDL arossupport amiga arosc m"


DATAFILES := icon.bmp picture.xbm sail.bmp sample.bmp sample.wav
DATAS  := $(foreach f,$(DATAFILES),$(EXEDIR)/$(f))

test-sdl : $(DATAS)

$(EXEDIR)/%.bmp : %.bmp
	@$(CP) $< $@

$(EXEDIR)/%.xbm : %.xbm
	@$(CP) $< $@

$(EXEDIR)/%.wav : %.wav
	@$(CP) $< $@

%common
