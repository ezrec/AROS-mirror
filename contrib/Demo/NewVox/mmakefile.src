include $(TOP)/config/make.cfg

#MM demo-newvox : demo-newvox-icons

DESTDIR := $(CONTRIBDIR)/Demos/NewVox

%build_prog mmake=demo-newvox \
    progname=NewVox targetdir=$(DESTDIR) \
    files=newvox uselibs="arossupport amiga arosc m"


ICONS := NewVox
ICONFILES := $(foreach f, $(ICONS), $(DESTDIR)/$(f).info)

#MM demo-newvox-icons : demo-newvox-setup
demo-newvox-icons : $(ICONFILES)
	
$(DESTDIR)/%.info : icons/%.info.src icons/%_N.png icons/%_S.png
	%makeicon2
