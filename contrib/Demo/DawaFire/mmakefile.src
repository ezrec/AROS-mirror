include $(TOP)/config/make.cfg

#MM demo-dawafire : demo-dawafire-icons

DESTDIR := $(CONTRIBDIR)/Demos/DawaFire

%build_prog mmake=demo-dawafire \
    progname=DawaFire targetdir=$(DESTDIR) \
    files=dawafire uselibs="arossupport amiga arosc m"


ICONS := DawaFire
ICONFILES := $(foreach f, $(ICONS), $(DESTDIR)/$(f).info)

#MM
demo-dawafire-icons : $(ICONFILES)

$(DESTDIR)/%.info : icons/%.info.src icons/%_N.png icons/%_S.png | $(DESTDIR)
	%makeicon2

%rule_makedirs dirs=$(DESTDIR)
