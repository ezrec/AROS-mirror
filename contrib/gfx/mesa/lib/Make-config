	$(MAKE) $(MFLAGS) targets \
	"GL_LIB = libMesaGL.a" \
	"GLU_LIB = libMesaGLU.a" \
	"GLUT_LIB = libglut.a" \
	"CC = gcc" \
	"CFLAGS = -pedantic -funroll-loops -O3 -DSHM" \
	"MAKELIB = ../mklib.ar-ruv" \
	"XLIBS = -L/usr/X11/lib -lX11 -lXext -lXt -lSM -lICE -lXmu -lXi"


