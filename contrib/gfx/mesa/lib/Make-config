	"MAKELIB = ../mklib.ar-ruv" \
	"XLIBS = -L/usr/X11/lib -L/usr/X11R6/lib -lX11 -lXext -lXmu -lXt -lXi -lSM -lICE -lpthread" \
	"ASM_SOURCES = asm_386.S"

